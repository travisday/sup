{
  "name": "functions",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "lint": "tsdx lint",
    "test": "tsdx test",
    "build": "tsdx build",
    "emulators": "yarn build && firebase emulators:start",
    "shell": "tsdx build && firebase functions:shell",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "logs": "firebase functions:log",
    "deploy": "firebase deploy"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "engines": {
    "node": "12"
  },
  "main": "dist/index.js",
  "dependencies": {
    "firebase-admin": "^8.10.0",
    "firebase-functions": "^3.6.1"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.2",
    "firebase-functions-test": "^0.2.0",
    "firebase-tools": "^9.8.0",
    "husky": "^6.0.0",
    "size-limit": "^4.10.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  },
  "size-limit": [
    {
      "path": "dist/sample.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/sample.esm.js",
      "limit": "10 KB"
    }
  ],
